extends layout

block content

  div.message-board
    if messages
      each message in messages
        div.message
          if currentUser
            p.message-author #{message.author.first_name} wrote:
          p.message-time-stamp=message.createdAt 
          h3.message-title=message.title
          p.message-body=message.body
    else
      h3 There is nothing here
