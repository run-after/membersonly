extends layout 
block content 

  h1=title

  ul
    if errors 
      each error in errors
        li=error.msg

  form.sign-up-form(method='POST' action='')
    input#first_name(type='text' placeholder='First name' name='first_name')
    input#last_name(type='text' placeholder='Last name' name='last_name')
    input#username(type='text' placeholder='username' name='username')
    input#password(type='password' placeholder='password' name='password')
    input#password-confirmation(type='password' placeholder='confirm' name='password-confirmation')
    button.primary-btn(type='submit') Sign up